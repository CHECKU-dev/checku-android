<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="data"
                type="com.example.nodeproject2.data.model.Schedule"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/schedule_item_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_solid_w01_rounded_shadow_20">

        <TextView
                android:id="@+id/tv_deadline"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textSize="24dp"
                tools:text="D-21"
                android:textColor="@color/checkuMain"
                android:gravity="center"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="55dp"
                android:text="@{data.title}"
                android:textSize="14dp"
                tools:text="장애학우 수강신청"
                android:textColor="@color/checkuText"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="83dp"
                android:text="@{data.date}"
                android:textSize="12dp"
                tools:text="8/12 금"
                android:textColor="@color/black"
                android:gravity="left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="103dp"
                android:autoSizeTextType="uniform"
                android:text="@{data.time}"
                tools:text="9:30 ~ 17:00"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:gravity="left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>