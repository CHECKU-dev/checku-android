<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
                name="viewModel"
                type="com.example.nodeproject2.ui.home.HomeViewModel"/>
    </data>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_home_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

            <TextView
                    android:fontFamily="@font/noto_sans_medium"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/checkuText"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:text="@string/application_classes_schedule" android:id="@+id/textView"/>

            <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vp_home"
                    android:layout_width="match_parent"
                    android:layout_height="138dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="190dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView"/>

            <TextView
                    android:fontFamily="@font/noto_sans_medium"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="220dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/checkuText"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:text="@string/empty_seat_notification"
                    android:id="@+id/tv_empty"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    app:layoutManager=".widget.utils.LinearLayoutManagerWrapper"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_empty"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>