<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>

        <variable
                name="label"
                type="String"/>
        <variable
                name="data"
                type="com.example.nodeproject2.data.model.Notification"/>
        <variable
                name="viewModel"
                type="com.example.nodeproject2.ui.home.HomeViewModel"/>
    </data>
    <FrameLayout
            android:layout_width="wrap_content"
            android:background="@drawable/bg_gray_color_round_20"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_notification_layout"
                android:layout_width="140dp"
                android:padding="20dp"
                android:layout_height="140dp">

            <TextView
                    android:id="@+id/subject_number"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="@{data.subjectNumber}"
                    android:textColor="@color/checkuMain"
                    tools:text="0265"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                    android:id="@+id/subject_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="left"
                    android:text="@{data.subjectName}"
                    tools:text="피부생명공학"
                    android:textColor="@color/checkuText"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/subject_number"/>


            <TextView
                    android:id="@+id/professor"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:gravity="left"
                    tools:text="믹키"
                    android:textSize="12dp"
                    android:text="@{data.professor}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/subject_name"/>


