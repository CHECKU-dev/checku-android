<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="data"
                type="com.yoon.nodeproject2.data.model.Schedule"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/schedule_item_layout"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:padding="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_gray_color_round_20">

        <TextView
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:id="@+id/tv_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:text="D-21"
                android:textColor="@color/checkuMain"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/tv_title"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@{data.title}"
                android:textSize="14sp"
                tools:text="장애학우 수강신청"
                android:textColor="@color/checkuText"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@id/tv_deadline"
                app:layout_constraintTop_toBottomOf="@id/tv_deadline"/>

        <TextView
                android:id="@+id/tv_date"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{data.date}"
                android:textSize="12sp"
                tools:text="8/12 금"
                android:gravity="start"
                app:layout_constraintStart_toStartOf="@+id/tv_deadline"
                app:layout_constraintTop_toBottomOf="@id/tv_title"/>

        <TextView
                android:id="@+id/tv_time"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:autoSizeTextType="uniform"
                android:text="@{data.time}"
                tools:text="9:30 ~ 17:00"
                android:textSize="12sp"
                android:gravity="start"
                app:layout_constraintStart_toStartOf="@id/tv_deadline"
                app:layout_constraintTop_toBottomOf="@+id/tv_date"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>