<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="viewModel"
                type="com.example.nodeproject2.ui.timetable.TimeTableViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.MainActivity">

        <com.google.android.material.tabs.TabLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                app:tabGravity="center"
                app:tabMode="fixed"
                app:tabIndicatorColor="@color/checkuMain"
                app:tabIndicatorHeight="1dp"
                app:tabRippleColor="@android:color/transparent"
                app:tabTextColor="@android:color/black">

            <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_item_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전공" />

            <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_item_elective"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="교양" />

        </com.google.android.material.tabs.TabLayout>

        <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tabLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/main_btm_nav"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/main_btm_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:itemBackground="@color/white"
                app:itemIconTint="@drawable/main_btm_nav_item_color"
                app:itemTextColor="@drawable/main_btm_nav_item_color"
                app:labelVisibilityMode="labeled"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:menu="@menu/menu_main_bottom_nav"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>