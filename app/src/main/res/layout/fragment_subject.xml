<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.nodeproject2.ui.subject.model.SubjectGrade"/>

        <import type="com.example.nodeproject2.ui.subject.model.SubjectType"/>

        <variable
                name="viewModel"
                type="com.example.nodeproject2.ui.subject.SubjectViewModel"/>


    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="15dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/search_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="24dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="70dp"
                    android:background="@drawable/bg_solid_w01_rounded_shadow_20">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_search_button"
                        android:id="@+id/appCompatImageView"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_search"
                        android:fontFamily="@font/noto_sans_regular"
                        android:includeFontPadding="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="과목명으로 검색하기"
                        android:textSize="16dp"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/appCompatImageView"/>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatCheckBox
                    android:fontFamily="@font/noto_sans_regular"
                    android:includeFontPadding="false"
                    android:id="@+id/rb_empty_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_button_selector_rectangle"
                    android:textColor="@drawable/radio_button_text"
                    android:button="@null"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/search_layout"
                    android:layout_marginStart="24dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textSize="15dp"
                    android:checked="@{viewModel.vacancy}"
                    android:onCheckedChanged="@{viewModel.onCheckboxVacancyChange}"
                    android:text="빈 강의"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.sothree.slidinguppanel.SlidingUpPanelLayout
                android:id="@+id/sliding_up_panel_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="top"
                app:umanoDragView="@id/sliding_panel_drag_view"
                app:umanoPanelHeight="70dp"
                app:umanoShadowHeight="0dp"
                app:umanoOverlay="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                        android:id="@+id/swipe_refresh_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="70dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:onRefreshListener="@{() -> viewModel.refreshData()}"
                        app:refreshing="@{viewModel.refreshed}">

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_subject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            app:layoutManager=".widget.utils.LinearLayoutManagerWrapper"/>


                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                    android:id="@+id/sliding_panel_drag_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_solid_w01_bottom_rounded_shadow_40">

                <View
                        android:id="@+id/view_divider"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:background="@color/gray_g11"/>


                <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/department_spinner"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:background="@drawable/bg_solid_w01_rounded_shadow_20"
                        android:layout_marginBottom="20dp"
                        android:layout_height="50dp"
                        android:entries="@array/department_list"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:onItemSelected="@{(parent,view,pos,id) -> viewModel.onSelectItem(parent,view,pos,id)}"/>

                <!--    학년 라디오 버튼-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                    <TextView
                            android:fontFamily="@font/noto_sans_medium"
                            android:includeFontPadding="false"
                            android:text="학년"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_gravity="center"/>

                    <RadioGroup
                            android:checkedButton="@id/subject_grade_all"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:orientation="horizontal">

                        <RadioButton
                                android:fontFamily="@font/noto_sans_regular"
                                android:includeFontPadding="false"
                                android:id="@+id/subject_grade_all"
                                android:layout_marginStart="27dp"
                                android:onClick='@{() -> viewModel.updateSubjectGrade(SubjectGrade.ALL)}'
                                android:textAlignment="center"
                                android:background="@drawable/radio_button_selector_rectangle"
                                android:textColor="@drawable/radio_button_text"
                                android:button="@null"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="전체"
                                android:textSize="13dp"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <RadioButton
                                android:fontFamily="@font/noto_sans_regular"
                                android:includeFontPadding="false"
                                android:onClick='@{() -> viewModel.updateSubjectGrade(SubjectGrade.FIRST)}'
                                android:layout_marginStart="20dp"
                                android:textAlignment="center"
                                android:background="@drawable/radio_button_selector"
                                android:textColor="@drawable/radio_button_text"
                                android:button="@null"
                                android:text="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <RadioButton
                                android:fontFamily="@font/noto_sans_regular"
                                android:includeFontPadding="false"
                                android:onClick='@{() -> viewModel.updateSubjectGrade(SubjectGrade.SECOND)}'
                                android:layout_marginStart="20dp"
                                android:textAlignment="center"
                                android:background="@drawable/radio_button_selector"
                                android:textColor="@drawable/radio_button_text"
                                android:button="@null"
                                android:text="2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                        <RadioButton
                                android:fontFamily="@font/noto_sans_regular"
                                android:includeFontPadding="false"
                                android:onClick='@{() -> viewModel.updateSubjectGrade(SubjectGrade.THIRD)}'
                                android:layout_marginStart="20dp"
                                android:textAlignment="center"
                                android:background="@drawable/radio_button_selector"
                                android:textColor="@drawable/radio_button_text"
                                android:button="@null"
                                android:text="3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                        <RadioButton
                                android:fontFamily="@font/noto_sans_regular"
                                android:includeFontPadding="false"
                                android:onClick='@{() -> viewModel.updateSubjectGrade(SubjectGrade.FOURTH)}'
                                android:layout_marginStart="20dp"
                                android:textAlignment="center"
                                android:background="@drawable/radio_button_selector"
                                android:textColor="@drawable/radio_button_text"
                                android:button="@null"
                                android:text="4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                    </RadioGroup>

                </LinearLayout>

                <!--    종류 라디오 버튼-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:fontFamily="@font/noto_sans_medium"
                            android:includeFontPadding="false"
                            android:text="종류"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_gravity="center"/>

                    <RadioGroup
                            android:checkedButton="@id/subject_type_all"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:orientation="horizontal">

                        <RadioButton
                                android:fontFamily="@font/noto_sans_regular"
                                android:includeFontPadding="false"
                                android:onClick='@{() -> viewModel.updateSubjectType(SubjectType.ALL)}'
                                android:id="@+id/subject_type_all"
                                android:layout_marginStart="27dp"
                                android:textAlignment="center"
                                android:background="@drawable/radio_button_selector_rectangle"
                                android:textColor="@drawable/radio_button_text"
                                android:button="@null"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="전체"
                                android:textSize="13dp"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <RadioButton
                                android:fontFamily="@font/noto_sans_regular"
                                android:includeFontPadding="false"
                                android:onClick='@{() -> viewModel.updateSubjectType(SubjectType.ESSENTIAL)}'
                                android:layout_marginStart="20dp"
                                android:textAlignment="center"
                                android:background="@drawable/radio_button_selector_rectangle"
                                android:textColor="@drawable/radio_button_text"
                                android:button="@null"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="전필"
                                android:textSize="13dp"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                        <RadioButton
                                android:fontFamily="@font/noto_sans_regular"
                                android:includeFontPadding="false"
                                android:onClick='@{() -> viewModel.updateSubjectType(SubjectType.OPTIONAL)}'
                                android:layout_marginStart="20dp"
                                android:textAlignment="center"
                                android:background="@drawable/radio_button_selector_rectangle"
                                android:textColor="@drawable/radio_button_text"
                                android:button="@null"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="전선"
                                android:textSize="13dp"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />


                        <RadioButton
                                android:fontFamily="@font/noto_sans_regular"
                                android:includeFontPadding="false"
                                android:onClick='@{() -> viewModel.updateSubjectType(SubjectType.OTHER)}'
                                android:layout_marginStart="20dp"
                                android:textAlignment="center"
                                android:background="@drawable/radio_button_selector_rectangle"
                                android:textColor="@drawable/radio_button_text"
                                android:button="@null"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="기타"
                                android:textSize="13dp"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                    </RadioGroup>

                </LinearLayout>

                <!--                <TextView-->
                <!--                        android:fontFamily="@font/notosanskrregular"-->
                <!--                        android:includeFontPadding="false"-->
                <!--                        android:layout_marginTop="40dp"-->
                <!--                        android:text="검색 필터"-->
                <!--                        android:layout_gravity="center"-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content"/>-->

                <ImageView
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bar_horizontal_round"
                        android:layout_width="60dp"
                        android:layout_height="40dp"/>


            </LinearLayout>

        </com.sothree.slidinguppanel.SlidingUpPanelLayout>
    </LinearLayout>

</layout>