<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChecKU" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/point_p01</item>
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/point_p01</item>
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <!-- 액션 바 스타일 시작 -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--custom font-family 적용-->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="actionBarSize">80dp</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CustomActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/actionbar_background</item>
<!--        <item name="background">@drawable/bg_actionbar</item>-->
<!--        <item name="titleTextStyle">@style/CustomActionBarTextStyle</item>-->
    </style>
    <!-- 액션 바 스타일 끝 -->

    <style name="CustomActionBarTextStyle" parent="android:TextAppearance">
        <!--        <item name="android:fontFamily">@font/your_desired_font</item>-->
        <item name="android:textSize">20dp</item>
        <!--        <item name="android:textStyle">bold</item>-->
        <item name="android:textColor">@color/checkuMain</item>
    </style>

    <!-- Custom font 적용 -->
    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="customButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="customEditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="customRadioButtonFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="customCheckboxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

</resources>