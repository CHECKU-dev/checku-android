<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>


        <variable
                name="label"
                type="String"/>
        <variable
                name="data"
                type="com.example.nodeproject2.data.model.Subject"/>
        <variable
                name="viewModel"
                type="com.example.nodeproject2.ui.timetable.TimeTableViewModel"/>
    </data>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_time_table_layout"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

            <TextView
                    android:id="@+id/emptySeat"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="@{data.emptySeat}"
                    tools:text="255"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:id="@+id/number_of_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="@{data.numberOfPeople}"
                    tools:text="0/255"
                    app:layout_constraintStart_toStartOf="@+id/emptySeat"
                    app:layout_constraintTop_toBottomOf="@id/emptySeat"
                    app:layout_constraintEnd_toEndOf="@+id/emptySeat"/>


            <TextView
                    android:id="@+id/subject_name"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:gravity="left"
                    android:text="@{data.subjectName}"
                    tools:text="대학영어1"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="53dp"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/subject_type"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:gravity="left"
                    android:text="@{@string/service_type_and_grade_and_subject_number(data.subjectType, data.grade, data.subjectNumber)}"
                    tools:text="지교 / 1학년 / 1225"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="53dp"
                    app:layout_constraintTop_toBottomOf="@id/subject_name"/>

            <TextView
                    android:id="@+id/professor"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:gravity="left"
                    android:text="@{data.professor}"
                    tools:text="믹키"
                    android:textSize="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="53dp"
                    app:layout_constraintTop_toBottomOf="@+id/subject_type"/>

            <TextView
                    android:id="@+id/time_and_place"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:gravity="left"
                    android:text="@{data.timeAndPlace}"
                    tools:text="월 12:00-13:30(산학208), 목 09:00-10:30(산학208)"
                    android:textSize="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="53dp"
                    app:layout_constraintTop_toBottomOf="@+id/professor"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:elevation="-1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="5">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            <ImageView
                    android:id="@+id/iv_notification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:text="알림"
                    android:onClick="@{() -> viewModel.applyNotification(data.subjectNumber, data.subjectName)}"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_weight="2"/>

            <ImageView
                    android:id="@+id/iv_remove"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/red"
                    android:text="삭제"
                    android:onClick="@{() -> viewModel.removeSubject(data.subjectNumber)}"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_weight="2"/>

        </LinearLayout>
    </FrameLayout>


</layout>